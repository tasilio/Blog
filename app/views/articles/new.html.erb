<h1><%= t('articles.new_h1') %></h1>

<%= form_for :article, url: articles_path do |f| %> <!-- Вместо '/articles' можно ввести переменную articles_path -->
	<p>
		<%= f.label t('articles.title') %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label t('articles.text')%><br />
		<%= f.text_area :text %>
	</p>
	<p>
		
		<%= f.submit t('articles.save') %><br />
	
	</p>
<%end%>