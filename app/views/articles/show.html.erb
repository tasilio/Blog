<h1> <%= @article.title %> </h1>

<p>

	<%= @article.text %>

</p>

<p>
	<a href="/articles"><%= t('articles.show_all') %></a> |
	<%= link_to t('articles.show_all'), articles_path   %>
</p>

<% @article.comments.each do |comment| %>

<p> 

	<i> <%= t('articles.author_said', par: comment.author) %></i><br />
	<%= comment.body %> <br />

	

</p>
<% end %>
<p>
	<%= form_for([@article, @article.comments.build])  do |f| %> 
		
		<!-- <p>
			<%= f.label :author %><br />
			<%= f.text_field :author %>
		</p> -->
		<p>
			<%= f.label t('articles.comment_body') %><br />
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit t('articles.comment_button') %><br />
		</p>

	<%end%>

</p>