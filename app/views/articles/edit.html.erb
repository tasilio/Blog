<h1>Edit article</h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %> <!-- Вместо '/articles' можно ввести переменную articles_path -->
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit  %><br />
	
	</p>
<%end%>
<%= form_for :article, url: article_path(@article), method: :delete do |f| %>

	<p>
		<%= f.submit 'Delete article' %><br />
	
	</p>


<%end%>
